<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oanaplesu.cloudmanager.AddNewAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/all_providers"
                android:padding="30dp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="30dp">

                <Button
                    android:id="@+id/googleSignInButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/google_icon"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="Sign In"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/dropboxSignInButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/dropbox_icon"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/onedriveSignInButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:drawableLeft="@drawable/onedrive_icon_blue"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
